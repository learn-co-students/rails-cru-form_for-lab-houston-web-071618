<table>
  <% @songs.each do |song| %>
    <tr>
      <td><p><%= link_to song.name, song %></p></td>
      <td><%= button_to 'Edit', edit_song_path(song), method: 'get' %></td>
      <td><%= button_to 'Remove', song, method: 'delete', data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to "Create Song", new_song_path %>

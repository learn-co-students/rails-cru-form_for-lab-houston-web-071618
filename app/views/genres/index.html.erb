<table>
  <% @genres.each do |genre| %>
    <tr>
      <td><%= link_to genre.name, genre %></td>
      <td><%= button_to 'Edit', edit_song_path(genre), method: 'get' %></td>
      <td><%= button_to 'Remove', genre, method: 'delete', data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to "Create Genre", new_genre_path %>